{
  "manifest_version": 3,
  "name": "The Necronomicon Mirror",
  "version": "1.0.0",
  "description": "Transforms any website into a haunting Halloween theme.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content_script.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "styles/*.css",
        "scripts/animation_engine.js",
        "src/theme_config.json"
      ],
      "matches": ["http://*/*", "https://*/*"]
    }
  ]
}
